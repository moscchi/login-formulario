<html lang="es">
<head>
    <%- include('./partials/head');%> 
</head>
<body class="container">
    <div class="alert alert-success" role="alert">
        <% if(nombre == undefined){%>
            <h1>Login de usuario</h1>
            <form action="http://localhost:8080/login" method="post">
                <input type="text" name="nombre" id="" placeholder="Ingrese su nombre">
                <input type="submit" value="Ingresar">
            </form>
            <% } else{ %>  
        Bienvenido <b><% nombre.nombre%> </b><button class="btn btn-warning">Desloguear</button> 
      </div>
      <% if(products.length > 0){ %>
        <% products.forEach((prod) => { %> 
               <table>
                   <thead class="t-title text-center">
                       <tr>
                           <th><%= prod.id %> </th>
                           <th><%= prod.title %></th>
                       </tr>
                   </thead>
                   <tbody class="t-body text-center">
                           <th>$<%= prod.price %></th>
                           <th><img src="<%=prod.thumbnail%>" style="width: 150px; height: 200px;" ></th>
                   </tbody>
           <% }); %>
           <% } else{ %>  
           <p>No hay productos para mostrar</p> 
           <% } %>
           <% } %>
</body>
</html>